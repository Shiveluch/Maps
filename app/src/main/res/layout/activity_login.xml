<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/map_back"
    tools:context=".Login">

    <RelativeLayout
        android:id="@+id/center_layout"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="false"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="150dp"
        android:layout_marginRight="50dp"
        android:background="@drawable/jeton"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.552"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.336">

        <EditText
            android:id="@+id/first_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="#00FFFFFF"
            android:ems="10"
            android:fontFamily="@font/font2"
            android:gravity="center"
            android:hint="Позывной"
            android:inputType="textPersonName"
            android:textSize="30sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/first_password"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="20dp"
            android:layout_toLeftOf="@id/textView2"
            android:alpha="0.9"
            android:background="#00FFFFFF"
            android:ems="10"
            android:fontFamily="@font/font2"
            android:gravity="center"
            android:inputType="text"
            android:maxLength="5"
            android:textColor="#C1000000"
            android:textSize="30sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/event_password"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="false"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="20dp"
            android:layout_toRightOf="@id/textView2"
            android:alpha="0.9"
            android:background="#00FFFFFF"
            android:ems="10"
            android:fontFamily="@font/font2"
            android:foregroundGravity="center"
            android:gravity="center"
            android:inputType="textPersonName"
            android:maxLength="5"
            android:textColor="#BF000000"
            android:textSize="30sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="20dp"
            android:text=":"
            android:textSize="36sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:background="@drawable/instr_but"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.001">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:foregroundGravity="center"
            android:gravity="center"
            android:text="Инструкции"
            android:textSize="30sp"
            android:textStyle="bold|italic" />
    </RelativeLayout>

    <Button
        android:id="@+id/new_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/old_login"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/jeton2"
        android:fontFamily="@font/font2"
        android:rotation="12"
        android:text="Загрузить \n данные из \n нового пароля"
        android:textColor="#A1000000"
        android:textSize="18sp"
        android:textStyle="bold"
        app:backgroundTint="#00FFFFFF"
        app:backgroundTintMode="screen" />

    <Button
        android:id="@+id/old_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/center_layout"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="false"
        android:layout_marginTop="20dp"
        android:background="@drawable/jeton2"
        android:focusable="auto"
        android:fontFamily="@font/font2"
        android:rotation="-17"
        android:text="ВХОД \n• со старым •\n паролем "
        android:textAllCaps="false"
        android:textColor="#97000000"
        android:textSize="24sp"
        android:textStyle="bold"
        app:backgroundTint="#00FFFFFF"
        app:backgroundTintMode="screen" />

</RelativeLayout>